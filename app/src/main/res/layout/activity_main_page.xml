<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/act3back"
    tools:context=".MainPage">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menubutt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:foregroundGravity="left"
            app:srcCompat="@drawable/menu" />

        <ImageView
            android:id="@+id/cvdownload"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:foregroundGravity="right"
            app:srcCompat="@drawable/cvdownload" />

    </LinearLayout>



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintTop_toBottomOf="@+id/ll1"
        app:srcCompat="@drawable/aboutmeblue" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintBottom_toTopOf="@+id/dividerLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id = "@+id/aboutLayout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_2_medium"
                android:paddingLeft="40dp"
                android:paddingBottom="20dp"
                android:text="Hello!ðŸ‘‹ I'm"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/glowingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_extrabold"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:shadowColor="#ffffff"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="45"
                android:text="DISHANT SAKHIDA"
                android:textColor="#ffffff"
                android:textSize="28dp" />

            <TextView
                android:id = "@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_2_medium"
                android:paddingLeft="40dp"
                android:text="A Software Developer"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/ofgreen"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:foregroundGravity="center_horizontal"
                android:paddingLeft="40dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/linesep" />

            <TextView
                android:id="@+id/skill1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:paddingLeft="40dp"
                android:paddingBottom="10dp"
                android:text="ðŸ’» Backend Developer by Profession"
                android:textColor="#7f8489"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/skill2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_2_medium"
                android:paddingLeft="40dp"
                android:paddingBottom="10dp"
                android:text="ðŸ“± Android Developer by Passion"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/skill3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:paddingLeft="40dp"
                android:text="ðŸŽ“ Electronics Engineer by Education"
                android:textColor="#7f8489"
                android:textSize="16sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/linebottom"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:foregroundGravity="center_horizontal"
                android:paddingLeft="40dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/linesep" />

            <TextView
                android:id="@+id/motog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_da"
                android:paddingLeft="40dp"
                android:paddingEnd="10dp"
                android:text="ðŸŽ¯Motivated and enthusiastic learner always thriving to learn and develop exciting things. Sharpened and delivered skills in entire learning and internships during Degree Level educationðŸŽ¯"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/skillsAndroid"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/act3back"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="0"
                            app:srcCompat="@drawable/androidimg" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/exo_2_medium"
                            android:foregroundGravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="Android"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c0c0c0"/>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/androidLoading"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/lineprogress" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/skillsJava"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/act3back"
                    android:orientation="vertical">


                    <LinearLayout
